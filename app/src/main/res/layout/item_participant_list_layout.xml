<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/participantNameFirstLetter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:text="A"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/participant_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingLeft="10dp"
            android:text="name"
            android:maxLines="1"
            android:maxLength="12"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/hostIndicator"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:text="Host"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:textFontWeight="700"
            app:cornerRadius="8dp"
            android:textStyle="bold"
            android:background="@drawable/textview_style"/>

        <TextView
            android:id="@+id/requestedIndicator"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:text="Requested"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:textFontWeight="700"
            app:cornerRadius="8dp"
            android:textStyle="bold"
            android:paddingHorizontal="8sp"
            android:paddingVertical="4sp"
            android:background="@drawable/textview_style_grey"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <ImageView
            android:id="@+id/mic_status"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_mic_off_style"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cam_status"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/ic_webcam_off_style"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btnParticipantMoreOptions"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@color/transparentColor"
            android:layout_marginStart="5sp"
            android:src="@drawable/ic_more_options" />

    </LinearLayout>


</LinearLayout>






