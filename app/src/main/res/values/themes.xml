<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HLSDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/ListViewStyle</item>
        <item name="popupMenuBackground">@drawable/dropdown_style</item>
        <item name="android:popupMenuStyle">@style/popupBg</item>
        <item name="bottomSheetDialogTheme">@style/AppModalStyle</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.HLSDemo">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="fab_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="btn_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="iconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:minHeight">55dp</item>

    </style>


    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded
        </item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/md_grey_100A</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/white</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">#5568FE</item>
    </style>

    <style name="ListViewStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/md_grey_10</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@drawable/dropdown_listview_style</item>
        <item name="android:listSelector">@color/popup_menu_dropdown_selector</item>
    </style>

    <style name="TextInputLayout_overlay" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/dropdown_selector</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popupBg" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_style</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="AppModalStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:checkedTextViewStyle">@style/CheckedTextViewTheme</item>
    </style>


    <style name="CheckedTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:checkMarkTint">@color/white</item>
    </style>

</resources>